version: '3.7'
networks:
  main_service: {}
services:
  nginx:
    build: images/nginx
    command: nginx -g "daemon off;"
    links:
      - php
    ports:
      - "${APP_PORT:-8001}:${APP_PORT:-8001}"
    volumes:
      - ./images/php/app/public:/var/www/html/app/public
    networks:
      main_service:
        aliases:
          - nginx
  php:
    build: images/php
    volumes:
      - ./images/php:/var/www/html
    working_dir: /var/www/html/app/public
    command: php-fpm
    ports:
      - "9000:9000"
    environment:
      APP_ENV: local
      APP_DEBUG: 'true'
      APP_KEY: SomeRandomKey!!!
      APP_LOCALE: en
      APP_FALLBACK_LOCALE: en
      DB_CONNECTION: mysql
      DB_HOST: mysql
      DB_DATABASE: ${MYSQL_DATABASE}
      DB_USERNAME: ${MYSQL_USERNAME}
      DB_PASSWORD: ${MYSQL_PASSWORD}
      MEMCACHED_HOST: cache
      CACHE_DRIVER: memcached
    networks:
      main_service:
        aliases:
          - php
  mysql:
    image: mysql:5.7
    command: mysqld --sql_mode="STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"
    volumes:
      - ./mysql-data:/var/lib/mysql
    user: "${USER_ID:-1000}:${GROUP_ID:-1000}"
    environment:
      - TZ=Asia/Jakarta
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=${MYSQL_DATABASE:-db_lumen}
      - MYSQL_USER=${MYSQL_USERNAME:-user}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD:-user}
    ports: 
      - 6612:3306
    networks:
      main_service:
        aliases:
          - mysql
  cache:
    image: memcached:1.6-alpine
    networks:
      main_service:
        aliases:
          - cache  